extends type_form
block title
  title 编辑类型
block actions
  a.glyphicon.glyphicon-trash.ui-btn-del(data-toggle='modal', data-target='#delDialog')
  #delDialog.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
    .modal-content(role='main', style='text-align:center;')
      .modal-body
        p.ui-title(style='') 确认删除？
        p(style='font-size: .6em;color: #c11b17;') 删除后数据无法恢复
      .modal-footer
        a.btn.btn-danger(href='#', onclick='deleteType()') 删除
        a.btn.btn-default(href='#', data-dismiss='modal') 取消
block header_text
  h4
    =name
block id_input
  input#id_input.form-control(type='text', name='id' value='#{id}')
block name_input
  input#name_input.form-control(type='text', name='name' value='#{name}')
block append init_scripts
  script(type='text/javascript').
    $(function() {
      $('#booktype_form').attr('action', 'updateType');
    });
    /* 删除类型 */
    function deleteType() {
      $('#booktype_form').attr('action', 'deleteType').submit();
    }